<%- include('partials/header') -%>
<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
          <span class="navbar-brand">Grocery Buddy</span>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/todos">Grocery list</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
        <h1>Edit Item:</h1>
        <div class="container">
            <form action="/todos/edit/<%= item[0]._id%>" method='POST'>
                <input type="text" name='groceryItem' value="<%=item[0].todo%>" required>
                <input type="number" placeholder="qty" name='quantity' min="0" value="<%=item[0].quantity%>">
                <select name="category" id="categoryForm">
                    <%newCategory.forEach(el => {%>
                        <option value="<%=el%>" <%= el === item[0].category ? 'selected' : ''%> ><%=el%></option>
                    <%})%>
                </select>
                <button class="btn btn-primary" type="submit">Update</button>
                <button class="btn btn-primary"><a href="/todos">Cancel</a></button>
            </form>
        </div>

                <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</body>
</html>